//Q 2.)  Set the ith bit of a number.

#include<stdio.h>

int setbiti(int number,int i){
    int mask=1<<i;
    return (number|mask); // Sets the i-th bit


   
}
int main()
{
    int n=46;
    int i=0;
    int updated_bit=setbiti(n,i);
    printf("original Bit %d\n",n);
    printf("updated Bit %d",updated_bit);

    return 0;
    
    
}
