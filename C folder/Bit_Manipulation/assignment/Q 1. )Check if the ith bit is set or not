//Q 1. )Check if the ith bit is set or not

#include<stdio.h>

int isibitset(int number,int i){
    if (number&(1<<i))
        printf("Bit is set at BIT %d",i);
    else
        printf("Bit not set at BIT%d",i);
}
int main()
{
    int n=46;
    int i=1;// checks the bit 
    isibitset(n,i);

    return 0;
    
    
}
