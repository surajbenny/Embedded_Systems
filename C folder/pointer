#include<stdio.h>
int main()
{
    int a=10;
    int b=20;
    int c=40;
    int *ptr1=&a;
    int *ptr2=&b;
    int *ptr3=&c;
    printf( "The value a:%d\n",a);
    printf("The value b:%d\n",b);
    printf("The value c:%d\n",c);
    printf( "The address of &a:%d\n",&a);
    printf("The address of &b:%d\n",&b);
    printf("The address of &c:%d\n",&c);
    printf("The address of a:%d\n",ptr1);
    printf("The address of b:%d\n",ptr2);
     printf("The address of c:%d\n",ptr3);
    printf("The value inside the address of ptr1:%p\n",*ptr1);
    printf("The value inside the address of ptr2:%p\n",*ptr2);
    printf("The value inside the address of ptr3:%p\n",*ptr3);
    printf("The address of *ptr1:%d\n",&ptr1);
    printf("The address of *ptr2:%d\n",&ptr2);
    printf("The address of *ptr3:%d\n",&ptr3);


}
