#include <stdint.h>
#include "STM32F446XX.H"
#define LED_PIN     5
#define BUTTON_PIN  13



#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{
	GPIOA_CLK_EN();
	GPIOC_CLK_EN();
	GPIOA->MODER &= ~(0x3 << (LED_PIN * 2));
	GPIOA->MODER |= (0x1 << LED_PIN * 2);
	GPIOC->MODER &= ~(0x3 << ( BUTTON_PIN* 2));
	// Set output type to push-pull (default, bit 5 = 0)
	GPIOA->OTYPER &= ~(0X1 << LED_PIN);
	// Set output speed to medium (01)
	GPIOA->OSPEEDR &= ~(0x3 << LED_PIN * 2);
	GPIOA->OSPEEDR |= (0x1 << LED_PIN * 2);
	// No pull-up/pull-down (00)
	GPIOA->PUPDR &= ~(0x3 << LED_PIN * 2);
	GPIOC->PUPDR &= ~(0x3 << LED_PIN * 2);
	GPIOC->PUPDR |= (0x1 << LED_PIN * 2);
	//GPIOA->ODR |= (1<<LED_PIN);
	//for(;;);
	while(1)
	{
		if (!(GPIOC->IDR & (1<< BUTTON_PIN)))
		{
			GPIOA->ODR |= (1<<5);
			printf("buttton is pressed");

		}
		else
		{
			GPIOA->ODR &= ~(1<<5);
			printf("button released");

		}
	}





}
